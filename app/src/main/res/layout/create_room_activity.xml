<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_prefix" />

            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/empty_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/room_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_prefix" />

            <EditText
                android:id="@+id/room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="@string/default_room" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/room_role_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_role_text" />

            <EditText
                android:id="@+id/room_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@string/room_role_default" />
        </LinearLayout>
          
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
            android:id="@+id/isAuthAudioSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isAuthAudioSend" />
        
        <CheckBox
            android:id="@+id/isAuthAudioRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isAuthAudioRev" />
        </LinearLayout>
            
             <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <CheckBox
            android:id="@+id/isAuthVideoSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isAuthVideoSend" />
        
        <CheckBox
            android:id="@+id/isAuthVideoRev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isAuthVideoRev" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/isSupportMultiVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isSupportMultiVideo" />
        
         <CheckBox
            android:id="@+id/isOpenBackCameraFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isOpenBackCameraFirst" />
        
        
        
        

    </LinearLayout>

    <Button
        android:id="@+id/create_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/create_room" />

</RelativeLayout>